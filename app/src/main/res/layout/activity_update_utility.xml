<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@drawable/worldmapbg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/toolbarlayout"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:src="@drawable/ic_tvs_race1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarlayout"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:id="@+id/r1"
            android:background="@drawable/bg_transparent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:textSize="20sp"
                android:id="@+id/filetitle"
                android:layout_alignParentTop="true"
                android:text="@string/firmwareupdate"/>

            <ProgressBar
                android:id="@+id/progressBarOne"
                android:layout_below="@+id/filetitle"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                />

            <TextView
                android:id="@+id/textViewProgressOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/colorwhite"

                android:layout_below="@+id/progressBarOne"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:id="@+id/r2"
            android:background="@drawable/bg_transparent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:textSize="20sp"
                android:id="@+id/filetitle2"
                android:layout_alignParentTop="true"
                android:text="@string/bootloaderapp"/>

            <ProgressBar
                android:id="@+id/progressBarTwo"
                android:layout_below="@+id/filetitle2"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
               />

            <TextView
                android:id="@+id/textViewProgressTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/colorwhite"

                android:layout_below="@+id/progressBarTwo"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:id="@+id/r3"
            android:background="@drawable/bg_transparent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:textSize="20sp"
                android:id="@+id/filetitle3"
                android:layout_alignParentTop="true"
                android:text="@string/confingapp"/>

            <ProgressBar
                android:id="@+id/progressBarThree"
                android:layout_below="@+id/filetitle3"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
               />

            <TextView
                android:id="@+id/textViewProgressThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/colorwhite"

                android:layout_below="@+id/progressBarThree"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/downloadBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:textColor="@color/colorwhite"
            android:background="@drawable/basic_buttongreen"
            android:text="@string/download" />

    </LinearLayout>


</RelativeLayout>
