<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblk"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/cluster">

        <TextView
            android:id="@+id/tvodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivli"
            android:layout_marginTop="289dp"
            android:layout_toEndOf="@+id/tvps"
            android:layout_toRightOf="@+id/tvps"
            android:text="0"
            android:textColor="@color/colorblk"
            android:textSize="65dp" />

        <TextView
            android:id="@+id/tvsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvodo"
            android:layout_marginTop="54dp"
            android:layout_toEndOf="@+id/ivli"
            android:layout_toRightOf="@+id/ivli"
            android:text="0"
            android:textColor="@color/colorblk"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/tvps"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="43dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:gravity="center_horizontal"
            android:text="0%"
            android:textColor="@color/colorwhite"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tvbat"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvps"
            android:layout_alignBottom="@+id/tvps"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:text="00.0V"
            android:textColor="@color/colorwhite"
            android:textSize="32dp" />

        <ImageView
            android:id="@+id/ivli"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/tvps"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvps"
            android:visibility="invisible"
            android:src="@drawable/leftind" />

        <ImageView
            android:id="@+id/ivri"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible"
            android:src="@drawable/rightind" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvodo"
            android:layout_alignBottom="@+id/tvodo"
            android:layout_toEndOf="@+id/tvodo"
            android:layout_toRightOf="@+id/tvodo"
            android:text="Kms"
            android:textColor="@color/colorblk" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvsd"
            android:layout_toEndOf="@+id/tvsd"
            android:layout_toRightOf="@+id/tvsd"
            android:text="Kms"
            android:textColor="@color/colorblk" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivli"
            android:layout_centerHorizontal="true"
            android:text="Cluster Live Parameters"
            android:textColor="@color/colorblk"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>
    </RelativeLayout>

