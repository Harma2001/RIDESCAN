<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:padding="10dp"
    android:alpha="0.9"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_readdid1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorwhite"
            android:text="Electricals"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ll"
            android:background="@color/colorwhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ll"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    android:text="Left hand Switch operation"
                    android:layout_margin="5dp"
                    />

                <ToggleButton
                    android:id="@+id/left_hand_switchy"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_check"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
                <ToggleButton
                    android:id="@+id/left_hand_switchn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_uncheck"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorwhite"
                        android:textSize="20dp"
                        android:text="Horn"
                        android:layout_margin="5dp"
                        />
                    <ToggleButton
                        android:id="@+id/horny"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_check"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                    <ToggleButton
                        android:id="@+id/hornn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_uncheck"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorwhite"
                        android:textSize="20dp"
                        android:text="Indicator"
                        android:layout_margin="5dp"
                        />
                    <ToggleButton
                        android:id="@+id/indicatory"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_check"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                    <ToggleButton
                        android:id="@+id/indicatorn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_uncheck"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorwhite"
                        android:textSize="20dp"
                        android:text="Pass switch"
                        android:layout_margin="5dp"
                        />
                    <ToggleButton
                        android:id="@+id/pass_switchy"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_check"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                    <ToggleButton
                        android:id="@+id/pass_switchn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_uncheck"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorwhite"
                        android:textSize="20dp"
                        android:text="All Bulbs Functioning"
                        android:layout_margin="5dp"
                        />
                    <ToggleButton
                        android:id="@+id/allbulbsy"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_check"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                    <ToggleButton
                        android:id="@+id/allbulbsn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_uncheck"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorwhite"
                        android:textSize="20dp"
                        android:text="Kill Switch"
                        android:layout_margin="5dp"
                        />
                    <ToggleButton
                        android:id="@+id/kill_switchy"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_check"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                    <ToggleButton
                        android:id="@+id/kill_switchn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_uncheck"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorwhite"
                        android:textSize="20dp"
                        android:text="Cluster"
                        android:layout_margin="5dp"
                        />
                    <ToggleButton
                        android:id="@+id/clustery"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_check"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                    <ToggleButton
                        android:id="@+id/clustern"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_uncheck"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorwhite"
                        android:textSize="20dp"
                        android:text="Time Setting"
                        android:layout_margin="5dp"
                        />
                    <ToggleButton
                        android:id="@+id/time_settingy"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_check"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                    <ToggleButton
                        android:id="@+id/time_settingn"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/toggle_uncheck"
                        android:textColor="@color/colorwhite"
                        android:layout_centerHorizontal="true"
                        android:textOff=""
                        android:textOn=""
                        android:checked="false"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    android:text="Overspeed Setting"
                    android:layout_margin="5dp"
                    />
                <ToggleButton
                    android:id="@+id/overspeed_setngy"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_check"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
                <ToggleButton
                    android:id="@+id/overspeed_setngn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_uncheck"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
            </LinearLayout>

            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ll"
            android:id="@+id/vw"
            android:background="@color/colorwhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:id="@+id/prev"
                android:background="@drawable/black_rec"
                android:textSize="20dp"
                android:textColor="@color/colorwhite"
                android:layout_weight="1"
                android:layout_marginRight="250dp"
                android:text="Previous"/>
            <Button
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:id="@+id/next"
                android:background="@drawable/black_rec"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/colorwhite"
                android:text="Next"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>