<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true">
            <shape  android:shape="rectangle" >
                <corners
                    android:radius="3dp"
                    />

                <gradient
                    android:angle="45"
                    android:centerX="35%"
                    android:centerColor="@color/colorTransparent1"
                    android:startColor="@color/colorTransparent1"
                    android:endColor="@color/colorTransparent1"
                    android:type="linear"
                    />
                <stroke
                    android:width="1dp"
                    android:color="#dd363333"
                    />
                <size
                    android:width="270dp"
                    android:height="60dp"
                    />
            </shape>

        </item>



            <item android:state_pressed="false">
                <shape android:shape="rectangle" >
                    <corners
                        android:radius="3dp"
                        />

                    <gradient
                        android:angle="45"
                        android:centerX="35%"
                        android:centerColor="@color/colorTransparent"
                        android:startColor="@color/colorTransparent"
                        android:endColor="@color/colorTransparent"
                        android:type="linear"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#dd363333"
                        />
                    <size
                        android:width="270dp"
                        android:height="60dp"
                        />
                </shape>

            </item>



</selector>