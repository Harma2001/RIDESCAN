<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:padding="10dp"
    android:alpha="0.9"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_readdid1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorwhite"
            android:text="Operations"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@color/colorwhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ll"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    android:text="Free Play Adjusments"
                    android:layout_margin="5dp"
                    />
                <ToggleButton
                    android:id="@+id/freey"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_check"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
                <ToggleButton
                    android:id="@+id/freen"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_uncheck"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:text="Brake"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/ll"
                android:background="@color/colorwhite"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    android:text="Front (3 - 5 mm)"
                    android:layout_margin="5dp"
                    />
                <ToggleButton
                    android:id="@+id/fronty"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_check"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
                <ToggleButton
                    android:id="@+id/frontn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_uncheck"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    android:text="Rear  (3- 5 mm)"
                    android:layout_margin="5dp"
                    />
                <ToggleButton
                    android:id="@+id/reary"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_check"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
                <ToggleButton
                    android:id="@+id/rearn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_uncheck"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    android:text="Clutch ( 10- 15 mm)"
                    android:layout_margin="5dp"
                    />
                <ToggleButton
                    android:id="@+id/clutchy"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_check"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
                <ToggleButton
                    android:id="@+id/clutchn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_uncheck"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    android:text="Throttle ( 3- 7 mm)"
                    android:layout_margin="5dp"
                    />
                <ToggleButton
                    android:id="@+id/throttley"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_check"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
                <ToggleButton
                    android:id="@+id/throttlen"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_uncheck"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp"
                    android:text="Service Reminder -\nKms Set Up-\nDate Set Up-"
                    android:layout_margin="5dp"
                    />
                <ToggleButton
                    android:id="@+id/serremy"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_check"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
                <ToggleButton
                    android:id="@+id/serremn"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/toggle_uncheck"
                    android:textColor="@color/colorwhite"
                    android:layout_centerHorizontal="true"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ll"
            android:id="@+id/vw"
            android:background="@color/colorwhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:id="@+id/prev"
                android:background="@drawable/black_rec"
                android:textSize="20dp"
                android:textColor="@color/colorwhite"
                android:layout_weight="1"
                android:layout_marginRight="250dp"
                android:text="Previous"/>
            <Button
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:id="@+id/next"
                android:background="@drawable/black_rec"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/colorwhite"
                android:text="Next"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>