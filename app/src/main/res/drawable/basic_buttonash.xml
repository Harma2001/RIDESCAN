<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true">
            <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                <corners
                    android:radius="8dp"
                    />
                <solid
                    android:color="@color/colorbg2"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="200dp"
                    android:height="50dp"
                    />
            </shape>

        </item>

        <item android:state_pressed="false" >


            <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                <corners
                    android:radius="8dp"
                    />
                <solid
                    android:color="@color/colorbg"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="200dp"
                    android:height="50dp"
                    />
            </shape>
        </item>


</selector>